{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "My custom boilerplate repo",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"yarn server\" \"yarn client\"",
    "server": "nodemon server.js --exec babel-node",
    "client": "cd client && yarn start",
    "build": "concurrently \"yarn build-server\" \"yarn build-client\"",
    "build-server": "babel server -d dist",
    "build-client": "cd client && yarn --production=false && yarn run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "yarn build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "concurrently": "^3.5.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  },
  "devDependencies": {
    "nodemon": "^1.11.0"
  }
}
